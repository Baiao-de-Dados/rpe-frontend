{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 999,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "insertPragma": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "comment": "Note: TypeScript/JavaScript files are ignored via .prettierignore to preserve manual indentation"
}
